---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="RestaurantHub - Restaurant Website Demo | Benard Atika">
  <main class="min-h-screen bg-white">
    <!-- Navigation -->
    <nav class="bg-white shadow-sm sticky top-0 z-50">
      <div class="container mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-2">
            <div class="w-8 h-8 bg-gradient-to-r from-orange-500 to-red-600 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
            <span class="text-xl font-bold text-gray-900">RestaurantHub</span>
          </div>
          
          <div class="hidden md:flex items-center space-x-8">
            <a href="#home" class="text-orange-600 font-medium">Home</a>
            <a href="#menu" class="text-gray-600 hover:text-orange-600 transition-colors">Menu</a>
            <a href="#about" class="text-gray-600 hover:text-orange-600 transition-colors">About</a>
            <a href="#reservations" class="text-gray-600 hover:text-orange-600 transition-colors">Reservations</a>
            <a href="#contact" class="text-gray-600 hover:text-orange-600 transition-colors">Contact</a>
          </div>
          
          <div class="flex items-center space-x-4">
            <button class="bg-orange-600 hover:bg-orange-700 text-white px-6 py-2 rounded-lg font-semibold transition-colors">
              Book Table
            </button>
            <a href="/" class="text-sm text-gray-500 hover:text-gray-700">‚Üê Back to Portfolio</a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <section id="home" class="relative h-screen flex items-center justify-center">
      <div class="absolute inset-0 bg-black bg-opacity-50"></div>
      <div 
        class="absolute inset-0 bg-cover bg-center"
        style="background-image: url('https://images.pexels.com/photos/1581384/pexels-photo-1581384.jpeg?auto=compress&cs=tinysrgb&w=1200')"
      ></div>
      
      <div class="relative z-10 text-center text-white max-w-4xl mx-auto px-6">
        <h1 class="text-5xl md:text-7xl font-bold mb-6 animate-fade-in">
          Exceptional <span class="text-orange-400">Dining</span> Experience
        </h1>
        <p class="text-xl md:text-2xl mb-8 animate-slide-up">
          Savor the finest cuisine crafted with passion and served with excellence
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center animate-slide-up" style="animation-delay: 0.2s;">
          <button class="bg-orange-600 hover:bg-orange-700 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all transform hover:scale-105">
            View Menu
          </button>
          <button class="border-2 border-white text-white hover:bg-white hover:text-gray-900 px-8 py-4 rounded-lg font-semibold text-lg transition-all">
            Make Reservation
          </button>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-20 bg-gray-50">
      <div class="container mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-4xl font-bold text-gray-900 mb-6">Our Story</h2>
            <p class="text-lg text-gray-600 mb-6">
              For over two decades, RestaurantHub has been serving exceptional cuisine that celebrates the rich traditions of culinary artistry. Our passionate chefs combine time-honored techniques with innovative flavors to create unforgettable dining experiences.
            </p>
            <p class="text-lg text-gray-600 mb-8">
              Every dish tells a story, every ingredient is carefully selected, and every meal is prepared with love and dedication to excellence.
            </p>
            <div class="grid grid-cols-3 gap-6 text-center">
              <div>
                <div class="text-3xl font-bold text-orange-600 mb-2">20+</div>
                <div class="text-gray-600">Years Experience</div>
              </div>
              <div>
                <div class="text-3xl font-bold text-orange-600 mb-2">50+</div>
                <div class="text-gray-600">Menu Items</div>
              </div>
              <div>
                <div class="text-3xl font-bold text-orange-600 mb-2">1000+</div>
                <div class="text-gray-600">Happy Customers</div>
              </div>
            </div>
          </div>
          <div class="relative">
            <img 
              src="https://images.pexels.com/photos/1581384/pexels-photo-1581384.jpeg?auto=compress&cs=tinysrgb&w=600" 
              alt="Restaurant Interior"
              class="w-full h-96 object-cover rounded-2xl shadow-2xl"
            />
            <div class="absolute -bottom-6 -left-6 w-32 h-32 bg-orange-600 rounded-full opacity-20"></div>
            <div class="absolute -top-6 -right-6 w-24 h-24 bg-red-600 rounded-full opacity-20"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Menu Section -->
    <section id="menu" class="py-20 bg-white">
      <div class="container mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Our Menu</h2>
          <p class="text-xl text-gray-600">Discover our carefully curated selection of dishes</p>
        </div>
        
        <!-- Menu Categories -->
        <div class="flex flex-wrap justify-center gap-4 mb-12">
          <button class="bg-orange-600 text-white px-6 py-3 rounded-lg font-semibold">All</button>
          <button class="bg-gray-100 text-gray-700 hover:bg-gray-200 px-6 py-3 rounded-lg font-semibold transition-colors">Appetizers</button>
          <button class="bg-gray-100 text-gray-700 hover:bg-gray-200 px-6 py-3 rounded-lg font-semibold transition-colors">Main Course</button>
          <button class="bg-gray-100 text-gray-700 hover:bg-gray-200 px-6 py-3 rounded-lg font-semibold transition-colors">Desserts</button>
          <button class="bg-gray-100 text-gray-700 hover:bg-gray-200 px-6 py-3 rounded-lg font-semibold transition-colors">Beverages</button>
        </div>
        
        <!-- Menu Items -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow">
            <img 
              src="https://images.pexels.com/photos/1581384/pexels-photo-1581384.jpeg?auto=compress&cs=tinysrgb&w=400" 
              alt="Grilled Salmon"
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-900 mb-2">Grilled Atlantic Salmon</h3>
              <p class="text-gray-600 mb-4">Fresh salmon fillet grilled to perfection, served with seasonal vegetables and lemon butter sauce</p>
              <div class="flex items-center justify-between">
                <span class="text-2xl font-bold text-orange-600">$28.99</span>
                <button class="bg-orange-600 hover:bg-orange-700 text-white px-4 py-2 rounded-lg transition-colors">
                  Order Now
                </button>
              </div>
            </div>
          </div>
          
          <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow">
            <img 
              src="https://images.pexels.com/photos/1581384/pexels-photo-1581384.jpeg?auto=compress&cs=tinysrgb&w=400" 
              alt="Ribeye Steak"
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-900 mb-2">Prime Ribeye Steak</h3>
              <p class="text-gray-600 mb-4">12oz prime ribeye steak cooked to your preference, served with garlic mashed potatoes</p>
              <div class="flex items-center justify-between">
                <span class="text-2xl font-bold text-orange-600">$42.99</span>
                <button class="bg-orange-600 hover:bg-orange-700 text-white px-4 py-2 rounded-lg transition-colors">
                  Order Now
                </button>
              </div>
            </div>
          </div>
          
          <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow">
            <img 
              src="https://images.pexels.com/photos/1581384/pexels-photo-1581384.jpeg?auto=compress&cs=tinysrgb&w=400" 
              alt="Lobster Risotto"
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-900 mb-2">Lobster Risotto</h3>
              <p class="text-gray-600 mb-4">Creamy arborio rice with fresh lobster meat, finished with truffle oil and parmesan</p>
              <div class="flex items-center justify-between">
                <span class="text-2xl font-bold text-orange-600">$36.99</span>
                <button class="bg-orange-600 hover:bg-orange-700 text-white px-4 py-2 rounded-lg transition-colors">
                  Order Now
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Reservations Section -->
    <section id="reservations" class="py-20 bg-gray-900 text-white">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-16">
            <h2 class="text-4xl font-bold mb-4">Make a Reservation</h2>
            <p class="text-xl text-gray-300">Book your table for an unforgettable dining experience</p>
          </div>
          
          <div class="grid md:grid-cols-2 gap-12">
            <!-- Reservation Form -->
            <div class="bg-gray-800 p-8 rounded-xl">
              <form class="space-y-6">
                <div class="grid md:grid-cols-2 gap-4">
                
                  <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">First Name</label>
                    <input 
                      type="text" 
                      class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-orange-500 focus:border-transparent"
                      placeholder="John"
                    />
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">Last Name</label>
                    <input 
                      type="text" 
                      class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-orange-500 focus:border-transparent"
                      placeholder="Doe"
                    />
                  </div>
                </div>
                
                <div>
                  <label class="block text-sm font-medium text-gray-300 mb-2">Email</label>
                  <input 
                    type="email" 
                    class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-orange-500 focus:border-transparent"
                    placeholder="john@example.com"
                  />
                </div>
                
                <div class="grid md:grid-cols-2 gap-4">
                  <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">Date</label>
                    <input 
                      type="date" 
                      class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-orange-500 focus:border-transparent"
                    />
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">Time</label>
                    <select class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-orange-500 focus:border-transparent">
                      <option>6:00 PM</option>
                      <option>6:30 PM</option>
                      <option>7:00 PM</option>
                      <option>7:30 PM</option>
                      <option>8:00 PM</option>
                    </select>
                  </div>
                </div>
                
                <div>
                  <label class="block text-sm font-medium text-gray-300 mb-2">Party Size</label>
                  <select class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-orange-500 focus:border-transparent">
                    <option>2 people</option>
                    <option>3 people</option>
                    <option>4 people</option>
                    <option>5 people</option>
                    <option>6+ people</option>
                  </select>
                </div>
                
                <div>
                  <label class="block text-sm font-medium text-gray-300 mb-2">Special Requests</label>
                  <textarea 
                    rows="3"
                    class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-orange-500 focus:border-transparent resize-none"
                    placeholder="Any special requests or dietary restrictions..."
                  ></textarea>
                </div>
                
                <button class="w-full bg-orange-600 hover:bg-orange-700 text-white py-4 rounded-lg font-semibold text-lg transition-colors">
                  Book Table
                </button>
              </form>
            </div>
            
            <!-- Contact Info -->
            <div class="space-y-8">
              <div>
                <h3 class="text-2xl font-bold mb-6">Contact Information</h3>
                <div class="space-y-4">
                  <div class="flex items-center space-x-4">
                    <div class="w-12 h-12 bg-orange-600 rounded-lg flex items-center justify-center">
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      </svg>
                    </div>
                    <div>
                      <h4 class="font-semibold">Address</h4>
                      <p class="text-gray-300">123 Gourmet Street, Culinary District, CD 12345</p>
                    </div>
                  </div>
                  
                  <div class="flex items-center space-x-4">
                    <div class="w-12 h-12 bg-orange-600 rounded-lg flex items-center justify-center">
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                      </svg>
                    </div>
                    <div>
                      <h4 class="font-semibold">Phone</h4>
                      <p class="text-gray-300">(555) 123-4567</p>
                    </div>
                  </div>
                  
                  <div class="flex items-center space-x-4">
                    <div class="w-12 h-12 bg-orange-600 rounded-lg flex items-center justify-center">
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                    </div>
                    <div>
                      <h4 class="font-semibold">Hours</h4>
                      <p class="text-gray-300">Mon-Sun: 5:00 PM - 11:00 PM</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-black text-white py-12">
      <div class="container mx-auto px-6">
        <div class="text-center">
          <div class="flex items-center justify-center space-x-2 mb-4">
            <div class="w-8 h-8 bg-gradient-to-r from-orange-500 to-red-600 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
            <span class="text-xl font-bold">RestaurantHub</span>
          </div>
          <p class="text-gray-400 mb-6">Exceptional dining experiences since 2004</p>
          <div class="border-t border-gray-800 pt-6">
            <p class="text-gray-500 text-sm">
              ¬© 2024 RestaurantHub. All rights reserved. | 
              This is a demo project created by <a href="/" class="text-orange-400 hover:text-orange-300">Benard Atika</a>
            </p>
          </div>
        </div>
      </div>
    </footer>
  </main>
</Layout>