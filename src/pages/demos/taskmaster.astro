---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="TaskMaster - Task Management App Demo | Benard Atika">
  <main class="min-h-screen bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-sm border-b">
      <div class="container mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <div class="w-8 h-8 bg-gradient-to-r from-green-500 to-blue-500 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <span class="text-xl font-bold text-gray-900">TaskMaster</span>
          </div>
          <div class="flex items-center space-x-4">
            <button class="text-gray-600 hover:text-gray-900">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5-5-5h5v-5a7.5 7.5 0 01-7.5-7.5H2.5"></path>
              </svg>
            </button>
            <div class="w-8 h-8 bg-gray-300 rounded-full"></div>
            <a href="/" class="text-sm text-gray-500 hover:text-gray-700">‚Üê Back to Portfolio</a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="container mx-auto px-6 py-8">
      <div class="grid lg:grid-cols-4 gap-8">
        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Projects</h2>
            <div class="space-y-2">
              <div class="flex items-center space-x-3 p-2 bg-blue-50 rounded-lg">
                <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
                <span class="text-sm font-medium text-blue-900">Website Redesign</span>
              </div>
              <div class="flex items-center space-x-3 p-2 hover:bg-gray-50 rounded-lg cursor-pointer">
                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                <span class="text-sm text-gray-700">Mobile App</span>
              </div>
              <div class="flex items-center space-x-3 p-2 hover:bg-gray-50 rounded-lg cursor-pointer">
                <div class="w-3 h-3 bg-purple-500 rounded-full"></div>
                <span class="text-sm text-gray-700">Marketing Campaign</span>
              </div>
            </div>
            
            <div class="mt-8">
              <h3 class="text-sm font-semibold text-gray-900 mb-3">Team Members</h3>
              <div class="space-y-2">
                <div class="flex items-center space-x-2">
                  <div class="w-6 h-6 bg-blue-500 rounded-full flex items-center justify-center text-xs text-white font-semibold">JD</div>
                  <span class="text-sm text-gray-700">John Doe</span>
                </div>
                <div class="flex items-center space-x-2">
                  <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center text-xs text-white font-semibold">SM</div>
                  <span class="text-sm text-gray-700">Sarah Miller</span>
                </div>
                <div class="flex items-center space-x-2">
                  <div class="w-6 h-6 bg-purple-500 rounded-full flex items-center justify-center text-xs text-white font-semibold">MJ</div>
                  <span class="text-sm text-gray-700">Mike Johnson</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Main Task Board -->
        <div class="lg:col-span-3">
          <div class="flex items-center justify-between mb-6">
            <h1 class="text-2xl font-bold text-gray-900">Website Redesign</h1>
            <button class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
              + Add Task
            </button>
          </div>

          <!-- Kanban Board -->
          <div class="grid md:grid-cols-3 gap-6">
            <!-- To Do Column -->
            <div class="bg-white rounded-lg shadow-sm">
              <div class="p-4 border-b border-gray-200">
                <div class="flex items-center justify-between">
                  <h3 class="font-semibold text-gray-900">To Do</h3>
                  <span class="bg-gray-100 text-gray-600 px-2 py-1 rounded-full text-xs">4</span>
                </div>
              </div>
              <div class="p-4 space-y-3">
                <div class="bg-white border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow cursor-pointer">
                  <h4 class="font-medium text-gray-900 mb-2">Design new homepage layout</h4>
                  <p class="text-sm text-gray-600 mb-3">Create wireframes and mockups for the new homepage design</p>
                  <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-2">
                      <div class="w-6 h-6 bg-blue-500 rounded-full flex items-center justify-center text-xs text-white font-semibold">JD</div>
                    </div>
                    <span class="text-xs text-gray-500">Due: Mar 15</span>
                  </div>
                </div>
                
                <div class="bg-white border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow cursor-pointer">
                  <h4 class="font-medium text-gray-900 mb-2">Research competitor websites</h4>
                  <p class="text-sm text-gray-600 mb-3">Analyze competitor sites for inspiration and best practices</p>
                  <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-2">
                      <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center text-xs text-white font-semibold">SM</div>
                    </div>
                    <span class="text-xs text-gray-500">Due: Mar 12</span>
                  </div>
                </div>
                
                <div class="bg-white border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow cursor-pointer">
                  <h4 class="font-medium text-gray-900 mb-2">Update brand guidelines</h4>
                  <p class="text-sm text-gray-600 mb-3">Revise brand colors and typography standards</p>
                  <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-2">
                      <div class="w-6 h-6 bg-purple-500 rounded-full flex items-center justify-center text-xs text-white font-semibold">MJ</div>
                    </div>
                    <span class="text-xs text-gray-500">Due: Mar 18</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- In Progress Column -->
            <div class="bg-white rounded-lg shadow-sm">
              <div class="p-4 border-b border-gray-200">
                <div class="flex items-center justify-between">
                  <h3 class="font-semibold text-gray-900">In Progress</h3>
                  <span class="bg-blue-100 text-blue-600 px-2 py-1 rounded-full text-xs">2</span>
                </div>
              </div>
              <div class="p-4 space-y-3">
                <div class="bg-white border-l-4 border-l-blue-500 border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow cursor-pointer">
                  <h4 class="font-medium text-gray-900 mb-2">Develop responsive navigation</h4>
                  <p class="text-sm text-gray-600 mb-3">Code the new navigation menu with mobile responsiveness</p>
                  <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-2">
                      <div class="w-6 h-6 bg-blue-500 rounded-full flex items-center justify-center text-xs text-white font-semibold">JD</div>
                    </div>
                    <span class="text-xs text-blue-600 font-medium">In Progress</span>
                  </div>
                </div>
                
                <div class="bg-white border-l-4 border-l-blue-500 border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow cursor-pointer">
                  <h4 class="font-medium text-gray-900 mb-2">Content strategy planning</h4>
                  <p class="text-sm text-gray-600 mb-3">Plan content structure and messaging for new pages</p>
                  <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-2">
                      <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center text-xs text-white font-semibold">SM</div>
                    </div>
                    <span class="text-xs text-blue-600 font-medium">In Progress</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Done Column -->
            <div class="bg-white rounded-lg shadow-sm">
              <div class="p-4 border-b border-gray-200">
                <div class="flex items-center justify-between">
                  <h3 class="font-semibold text-gray-900">Done</h3>
                  <span class="bg-green-100 text-green-600 px-2 py-1 rounded-full text-xs">3</span>
                </div>
              </div>
              <div class="p-4 space-y-3">
                <div class="bg-white border-l-4 border-l-green-500 border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow cursor-pointer opacity-75">
                  <h4 class="font-medium text-gray-900 mb-2">Project kickoff meeting</h4>
                  <p class="text-sm text-gray-600 mb-3">Initial team meeting to discuss project scope and timeline</p>
                  <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-2">
                      <div class="w-6 h-6 bg-purple-500 rounded-full flex items-center justify-center text-xs text-white font-semibold">MJ</div>
                    </div>
                    <span class="text-xs text-green-600 font-medium">Completed</span>
                  </div>
                </div>
                
                <div class="bg-white border-l-4 border-l-green-500 border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow cursor-pointer opacity-75">
                  <h4 class="font-medium text-gray-900 mb-2">User research survey</h4>
                  <p class="text-sm text-gray-600 mb-3">Conducted user survey to understand current pain points</p>
                  <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-2">
                      <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center text-xs text-white font-semibold">SM</div>
                    </div>
                    <span class="text-xs text-green-600 font-medium">Completed</span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Project Stats -->
          <div class="mt-8 grid md:grid-cols-4 gap-4">
            <div class="bg-white rounded-lg shadow-sm p-6 text-center">
              <div class="text-2xl font-bold text-blue-600 mb-1">9</div>
              <div class="text-sm text-gray-600">Total Tasks</div>
            </div>
            <div class="bg-white rounded-lg shadow-sm p-6 text-center">
              <div class="text-2xl font-bold text-green-600 mb-1">3</div>
              <div class="text-sm text-gray-600">Completed</div>
            </div>
            <div class="bg-white rounded-lg shadow-sm p-6 text-center">
              <div class="text-2xl font-bold text-yellow-600 mb-1">2</div>
              <div class="text-sm text-gray-600">In Progress</div>
            </div>
            <div class="bg-white rounded-lg shadow-sm p-6 text-center">
              <div class="text-2xl font-bold text-gray-600 mb-1">67%</div>
              <div class="text-sm text-gray-600">Progress</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Demo Footer -->
    <footer class="bg-white border-t mt-12">
      <div class="container mx-auto px-6 py-8">
        <div class="text-center">
          <p class="text-gray-600 mb-2">TaskMaster - Project Management Made Simple</p>
          <p class="text-gray-500 text-sm">
            This is a demo project created by <a href="/" class="text-blue-600 hover:text-blue-700">Benard Atika</a>
          </p>
        </div>
      </div>
    </footer>
  </main>
</Layout>