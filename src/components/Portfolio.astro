---
// Portfolio Projects Section
---

<section id="portfolio" class="py-20 bg-gray-50">
  <div class="container mx-auto px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          My <span class="text-primary-600">Portfolio</span>
        </h2>
        <p class="text-xl text-gray-600 mb-8">
          Showcasing my latest projects and technical expertise
        </p>
        <div class="w-24 h-1 bg-gradient-to-r from-primary-600 to-secondary-600 mx-auto"></div>
      </div>
      
      <!-- Filter Buttons -->
      <div class="flex flex-wrap justify-center gap-4 mb-12">
        <button class="filter-btn active px-6 py-3 bg-primary-600 text-white rounded-lg font-semibold hover:bg-primary-700 transition-colors" data-filter="all">
          All Projects
        </button>
        <button class="filter-btn px-6 py-3 bg-white text-gray-700 rounded-lg font-semibold hover:bg-gray-100 border border-gray-300 transition-colors" data-filter="landing">
          Landing Pages
        </button>
        <button class="filter-btn px-6 py-3 bg-white text-gray-700 rounded-lg font-semibold hover:bg-gray-100 border border-gray-300 transition-colors" data-filter="webapp">
          Web Apps
        </button>
        <button class="filter-btn px-6 py-3 bg-white text-gray-700 rounded-lg font-semibold hover:bg-gray-100 border border-gray-300 transition-colors" data-filter="ecommerce">
          E-commerce
        </button>
      </div>
      
      <!-- Projects Grid -->
      <div id="projects-grid" class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Project 1: TechFlow Landing Page -->
        <div class="project-card bg-white rounded-xl shadow-lg hover:shadow-2xl transform hover:-translate-y-2 transition-all duration-300 overflow-hidden" data-category="landing">
          <div class="aspect-video overflow-hidden">
            <img 
              src="https://images.pexels.com/photos/196644/pexels-photo-196644.jpeg?auto=compress&cs=tinysrgb&w=600" 
              alt="TechFlow Landing Page"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">TechFlow Landing Page</h3>
            <p class="text-gray-600 mb-4">Modern SaaS landing page with animated components and conversion optimization</p>
            
            <!-- Tech Stack -->
            <div class="flex flex-wrap gap-2 mb-4">
              <span class="px-3 py-1 bg-orange-100 text-orange-800 text-sm font-medium rounded-full">Astro</span>
              <span class="px-3 py-1 bg-blue-100 text-blue-800 text-sm font-medium rounded-full">Tailwind</span>
              <span class="px-3 py-1 bg-yellow-100 text-yellow-800 text-sm font-medium rounded-full">JavaScript</span>
            </div>
            
            <!-- Links -->
            <div class="flex gap-3">
              <a href="/demos/techflow" class="w-full text-center px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors">
                Live Demo
              </a>
            </div>
          </div>
        </div>
        
        <!-- Project 2: TaskMaster Web App -->
        <div class="project-card bg-white rounded-xl shadow-lg hover:shadow-2xl transform hover:-translate-y-2 transition-all duration-300 overflow-hidden" data-category="webapp">
          <div class="aspect-video overflow-hidden">
            <img 
              src="https://images.pexels.com/photos/3184465/pexels-photo-3184465.jpeg?auto=compress&cs=tinysrgb&w=600" 
              alt="TaskMaster Web App"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">TaskMaster Web App</h3>
            <p class="text-gray-600 mb-4">Full-featured task management application with real-time updates</p>
            
            <!-- Tech Stack -->
            <div class="flex flex-wrap gap-2 mb-4">
              <span class="px-3 py-1 bg-orange-100 text-orange-800 text-sm font-medium rounded-full">Astro</span>
              <span class="px-3 py-1 bg-blue-100 text-blue-800 text-sm font-medium rounded-full">TypeScript</span>
              <span class="px-3 py-1 bg-green-100 text-green-800 text-sm font-medium rounded-full">API</span>
            </div>
            
            <!-- Links -->
            <div class="flex gap-3">
              <a href="/demos/taskmaster" class="w-full text-center px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors">
                Live Demo
              </a>
            </div>
          </div>
        </div>
        
        <!-- Project 3: StyleShop E-commerce -->
        <div class="project-card bg-white rounded-xl shadow-lg hover:shadow-2xl transform hover:-translate-y-2 transition-all duration-300 overflow-hidden" data-category="ecommerce">
          <div class="aspect-video overflow-hidden">
            <img 
              src="https://images.pexels.com/photos/3965545/pexels-photo-3965545.jpeg?auto=compress&cs=tinysrgb&w=600" 
              alt="StyleShop E-commerce"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
            />
